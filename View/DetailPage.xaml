<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Notak.View.DetailPage"
             xmlns:viewmodel="clr-namespace:Notak.ViewModel"
             x:DataType="viewmodel:DetailViewModel"
             Title="Note details:">
    <StackLayout Padding="10" Spacing="10">
        <Label Text="{Binding NoteTask.Due}" Margin="15, 0, 0, -10" FontSize="Caption"/>
        <Frame Padding="15, 5">
            <Label Text="{Binding NoteTask.Title}" FontSize="20" />
        </Frame>
        <StackLayout Orientation="Horizontal" HorizontalOptions="Fill">
            <HorizontalStackLayout Spacing="5" HorizontalOptions="StartAndExpand">
                <Button Text="Go Back"
                Command="{Binding GoBackCommand}"/>
                <Button Text="Edit"
                Command="{Binding EditCommand}"/>
            </HorizontalStackLayout>
            <Button Text="Delete"
                BackgroundColor="{StaticResource Danger}"
                HorizontalOptions="End"
                Command="{Binding DeleteCommand}"/>
        </StackLayout>
    </StackLayout>
</ContentPage>
